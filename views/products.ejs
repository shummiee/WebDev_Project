<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%= title || 'Bad Thrifts' %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../auth/login') %>
    <%- include('../auth/registration') %>

    <section class="products-new" id="productsNew">
        <div class="section-title">
        <h1>New Arrivals</h1>
        </div>

        <div class="products-grid">
        <% products.forEach(product => { %>
            <div class="product-card <%= product.stock === 0 ? 'sold-out' : '' %>">
            <div class="product-image">
                <img src="/img/<%= product.image %>" alt="<%= product.name %>">
            </div>
            <div class="product-info">
                <span class="price">â‚±<%= product.price %></span>
                <h3><%= product.name %></h3>
                <p><%= product.description %></p>
                <span class="stock-label"><%= product.stock === 0 ? 'Sold Out!' : `Stock: ${product.stock}` %></span>
            </div>
            </div>
        <% }) %>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="/js/main_js.js" defer></script>
</body>
</html>
